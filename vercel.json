{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "bun run build",
        "installCommand": "bun install"
      }
    }
  ],
  "redirects": [
    {
      "source": "/resume",
      "destination": "/resume-2025.pdf",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/fonts/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}